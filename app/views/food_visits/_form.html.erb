<%= form_for(@food_visit, :html => {:class => "form-horizontal"}) do |f| %>
	<legend>Food Visit Form</legend>
  <% if @food_visit.errors.any? %>
    <div class="alert alert-error">
      <h4 class="alert-heading"><%= pluralize(@food_visit.errors.count, "error") %> prohibited this food_visit from being saved:</h4>

      <ul>
      <% @food_visit.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<%= f.hidden_field :user_id , :value => current_user.id %>
	<% if @food_visit.person_id.nil? %>
		<%= f.hidden_field :person_id , :value => @person.id %>
	<% else %>
		<%= f.hidden_field :person_id , :value => @food_visit.person_id %>
	<% end %>
	
	<div class="control-group">
		<%= f.label :person_name, :class => "control-label" %>
		<div class="controls">
			
			<% if @food_visit.person_id.nil? %>	
				<%= f.text_field :person_name, :disabled => true, :value => @person.full_name, :class => "input-xlarge" %>
			<% else %>
				<%= f.text_field :person_name, :disabled => true, :value => @food_visit.owners_full_name, :class => "input-xlarge" %>
			<% end %>
			
		</div>
	</div>
	

  <div class="control-group">
    <%= f.label :order_number, :class => "control-label" %>
    <div class="controls">		
    <%= f.number_field :order_number, :class => "input-xlarge" %>
		</div>
  </div>
  <div class="control-group">
    <%= f.label :food_in, :class => "control-label" %>
    <div class="controls">		
    <%= f.check_box :food_in, :class => "input-xlarge" %>
		</div>
  </div>
  <div class="control-group">
    <%= f.label :number_of_adults, :class => "control-label" %>
    <div class="controls">		
    <%= f.number_field :number_of_adults, :class => "input-xlarge" %>
		</div>
  </div>
  <div class="control-group">
    <%= f.label :number_of_children, :class => "control-label" %>
    <div class="controls">		
    <%= f.number_field :number_of_children, :class => "input-xlarge" %>
		</div>
  </div>
  <div class="control-group">
    <%= f.label :number_of_elderly, :class => "control-label" %>
    <div class="controls">		
    <%= f.number_field :number_of_elderly, :class => "input-xlarge" %>
		</div>
  </div>
  <div class="control-group">
    <%= f.label :special_needs, :class => "control-label" %>
    <div class="controls">		
    <%= f.text_area :special_needs, :class => "input-xlarge" %>
		</div>
  </div>
  <div class="form-actions">
    <%= f.submit :class => "btn btn-primary" %>
		<%= link_to "Cancel", search_people_path,  :class => "btn" %>
  </div>
<% end %>
