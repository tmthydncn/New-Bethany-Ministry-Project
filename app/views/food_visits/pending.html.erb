<h1>Pending Food Visits</h1>
<% if @food_visits.nil? or @food_visits.empty? %>
	<blockquote>There are no pending food visits</blockquote>
<% else %>

<table class="table table-striped">
  <tr>
    <th>Order</th>
		<th>Person</th>
    <th>Action</th>

  </tr>

<% @food_visits.each do |food_visit| %>
  <tr>
    <td><%= food_visit.order_number %></td>
		<td><%= link_to food_visit.owners_full_name, search_food_visits_path(:person_id => food_visit.person)  %>

    <td><%= link_to 'Completed', processed_food_visit_path(food_visit), :class => "btn btn-mini btn-success", :method => :post %>
	<%= link_to "Edit", edit_food_visit_path(food_visit), :class => "btn btn-mini" %></td>
  </tr>
<% end %>
</table>
<% end %>
<br />

<h1>Recently Completed or Canceled</h1>

<table class="table table-striped">
  <tr>
    <th>Order</th>
		<th>Person</th>
		<th>Status</th>
    <th>Action</th>

  </tr>

<% @food_visits_old.each do |food_visit| %>
  <tr>
    <td><%= food_visit.order_number %></td>
		<td><%= link_to food_visit.owners_full_name, food_visit.person %>
		<td><%= food_visit.status %></td>
		<td><%= link_to "Edit", edit_food_visit_path(food_visit), :class => "btn btn-mini" %>
			<%= link_to 'Destroy', food_visit, confirm: 'Are you sure?', method: :delete, :class => 'btn  btn-mini btn-danger' %>
  </tr>
<% end %>
</table>

<br />

