<h3>By first name</h3>
<% if @people_first_name.empty? %>
	<blockquote>Search returned zero results</blockquote>
<% else %>
<table class="table table-striped">

	<tr>
    <th>First name</th>
    <th>Middle name</th>
    <th>Last name</th>
    <th>Gender</th>
    <th>Ssn</th>
    <th>Date of birth</th>
		<th>Actions:</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @people_first_name.each do |person| %>
  <tr>
    <td><%= person.first_name %></td>
    <td><%= person.middle_name %></td>
    <td><%= person.last_name %></td>
    <td><%= person.gender %></td>
    <td><%= "#{person.ssn}".sub(/(\d{3})(\d{2})(\d{4})/, "\\1-\\2-\\3") %></td>
    <td><%= person.date_of_birth %></td>
		<td><%= link_to 'Add Food Visit', search_food_visits_path(person_id: person), :class => "btn" %></td>
    <td><%= link_to 'Show', person %></td>
    <td><%= link_to 'Edit', edit_person_path(person) %></td>
    <td><%= link_to 'Destroy', person, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
	<% end %>
</table>
<%= will_paginate @people_first_name %>
<% end %>
