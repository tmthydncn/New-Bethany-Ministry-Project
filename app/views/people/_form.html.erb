<%= form_for(@person, :html => { :class => "form-horizontal"}) do |f| %>
	<legend>Personal Details</legend>
  <% if @person.errors.any? %>
    <div class="alert alert-error">
      <h4 class="alert-heading"><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h4>
      <ul>
      <% @person.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :first_name, "First Name *", :class => "control-label"%>
		<div class="controls">
    <%= f.text_field :first_name, :class => "input-xlarge" %>
		</div>
  </div>
  <div class="control-group">
    <%= f.label :middle_name, :class => "control-label"%>
		<div class="controls">
    <%= f.text_field :middle_name, :class => "input-xlarge" %>
		</div>
  </div>
  <div class="control-group">
    <%= f.label :last_name, "Last Name *", :class => "control-label"%>
		<div class="controls">
    <%= f.text_field :last_name, :class => "input-xlarge" %>
		</div>
  </div>
  <div class="control-group">
    <%= f.label :gender, :class => "control-label"%>
		<div class="controls">
    <%= f.select :gender, Person::GENDER_TYPES, :class => "input-xlarge" %>
		</div>
  </div>
  <div class="control-group">
    <%= f.label :ssn, "Social security number *", :class => "control-label"%>
		<div class="controls">
    <%= f.text_field :ssn, :class => "input-xlarge" %>
		</div>
  </div>
  <div class="control-group">
    <%= f.label :date_of_birth, "Date of birth *", :class => "control-label"%>
		<div class="controls">
			<%= f.text_field(:date_of_birth, :placeholder => "Pick a birth date", :class => "input-xlarge")%>
		</div>
  </div>
  <div class="control-group">
    <%= f.label :ethnicity, :class => "control-label"%>
		<div class="controls">
    <%= f.select :ethnicity, Person::ETHNICITY_TYPES, :class => "input-xlarge" %>
		</div>
  </div>
  <div class="control-group">
    <%= f.label :education, :class => "control-label"%>
		<div class="controls">
    <%= f.text_field :education, :class => "input-xlarge" %>
		</div>
  </div>
  <div class="control-group">
    <%= f.label :health_insurance, :class => "control-label"%>
		<div class="controls">
    <%= f.select :health_insurance, Person::INSURANCE_TYPES, :class => "input-xlarge" %>
		</div>
  </div>
	<div class="row">
      <div class="span6">
				<div class="control-group">
			    <%= f.label :drug_history, :class => "control-label"%>
					<div class="controls">
			    <%= f.check_box :drug_history, :class => "input-xlarge" %>
					</div>
			  </div>
		</div>
		<div class="span6">
			  <div class="control-group">
			    <%= f.label :criminal_background, :class => "control-label"%>
					<div class="controls">
			    <%= f.check_box :criminal_background, :class => "input-xlarge" %>
					</div>
			  </div>
		</div>
	</div>
	<legend>Housing Details</legend>
  <div class="control-group">
    <%= f.label :housing, :class => "control-label"%>
		<div class="controls">
    <%= f.select :housing, Person::HOUSING_TYPES, :class => "input-xlarge" %>
		</div>
  </div>
  <div class="control-group">
    <%= f.label :address, :class => "control-label"%>
		<div class="controls">
    <%= f.text_area :address, :size => "20x10", :class => "input-xlarge" %>
		</div>
  </div>

  <div class="control-group">
    <%= f.label :family_type, :class => "control-label"%>
		<div class="controls">
    <%= f.select :family_type, Person::FAMILY_TYPES, :class => "input-xlarge" %>
		</div>
  </div>
  <div class="control-group">
    <%= f.label :people_in_house, "People in house *", :class => "control-label"%>
		<div class="controls">
    <%= f.number_field :people_in_house, :class => "input-xlarge" %>
		</div>
  </div>
	<legend>Income Details</legend>
  <div class="row">
      <div class="span6">
  			<div class="control-group">
			    <%= f.label :employment_income, "Employment income", :class => "control-label"%>
					<div class="controls">
			    <%= f.number_field :employment_income, :class => "input-xlarge" %>
					</div>
			  </div>
			</div>
			<div class="span6">
  			<div class="control-group">
			    <%= f.label :ssi, "Ssi *", :class => "control-label"%>
					<div class="controls">
			    <%= f.number_field :ssi, :class => "input-xlarge" %>
					</div>
			  </div>
		</div>
	</div>
	<div class="row">
      <div class="span6">
  			<div class="control-group">
			    <%= f.label :ssd, "Ssd *", :class => "control-label"%>
					<div class="controls">
			    <%= f.number_field :ssd, :class => "input-xlarge" %>
					</div>
			  </div>
			</div>
			<div class="span6">
			  <div class="control-group">
			    <%= f.label :child_support, "Child support *", :class => "control-label"%>
					<div class="controls">
			    <%= f.number_field :child_support, :class => "input-xlarge" %>
					</div>
			  </div>
		</div>
	</div>
	<div class="row">
      <div class="span6">
			  <div class="control-group">
			    <%= f.label :food_stamps, "Food stamps *", :class => "control-label"%>
					<div class="controls">
			    <%= f.number_field :food_stamps, :class => "input-xlarge" %>
					</div>
			  </div>
			</div>
			<div class="span6">
			  <div class="control-group">
			    <%= f.label :welfare, "Welfare *", :class => "control-label"%>
					<div class="controls">
			    <%= f.number_field :welfare, :class => "input-xlarge" %>
					</div>
			  </div>
			</div>
		</div>
	<legend>Other Details</legend>
  <div class="control-group">
    <%= f.label :other, :class => "control-label"%>
		<div class="controls">
    <%= f.text_area :other, :size => "20x10", :class => "input-xlarge" %>
		</div>
  </div>

  <div class="form-actions">
    <%= f.submit :class => "btn btn-primary" %>
		<%= link_to "Cancel", search_people_path,  :class => "btn" %>
  </div>
<% end %>
