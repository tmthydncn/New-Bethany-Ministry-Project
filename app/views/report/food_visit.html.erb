<h1>Search</h1>
<div class="row">
<%= form_tag(report_food_visit_path, :method => :get, :class => "well form-search span12") do %>
	<span class="span4">
  <%= label_tag(:start_date, "Start Date:") %>
  <%= text_field_tag(:start_date, params[:start_date], :placeholder => "Pick a starting date")%>
	</span><span class="span4">
	<%= label_tag(:end_date, "End Date:") %>
  <%= text_field_tag(:end_date, params[:end_date], :placeholder => "Pick an ending date")%>
	</span>
  <%= submit_tag("Search", :class => "btn") %>
<% end %>
</div>

<h3>Report</h3>
<h5><%= @query_humanized unless @query_humanized.nil? %></h5>
<% if @food_visits.nil? or @food_visits.empty? %>
	<blockquote>Search returned zero results</blockquote>
<% else %>

<table class="table table-striped">
	  <tr>
			<th>Date</th>
	    <th>Number of adults</th>
	    <th>Number of children</th>
	    <th>Number of elderly</th>
	  </tr>

	<% @food_visits.each do |food_visit| %>
	  <tr>
			<td><%= food_visit.created_at.to_date %></td>
	    <td><%= food_visit.number_of_adults %></td>
	    <td><%= food_visit.number_of_children %></td>
	    <td><%= food_visit.number_of_elderly %></td>
	  </tr>
	<% end %>
	<tr>
		<th>Total of <%= @days %></th>
    <th><%= @food_visits_total.number_of_adults %></th>
    <th><%= @food_visits_total.number_of_children %></th>
    <th><%= @food_visits_total.number_of_elderly %></th>
  </tr>
	</table>
	<% end %>

	