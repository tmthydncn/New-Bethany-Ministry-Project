<h1>Listing users</h1>
<br />
<h6><%= link_to 'Add a New User', new_user_path, :class => "btn" %></h6>
<br />
<table class="table table-striped ">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Actions</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'Show', user, :class => "btn btn-mini btn-info" %>
			<%= link_to 'Edit', edit_user_path(user), :class => "btn btn-mini" %>
			<%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete, :class => "btn btn-mini btn-danger" %></td>
  </tr>
<% end %>
</table>

<br />


